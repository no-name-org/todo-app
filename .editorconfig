root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_size = 8
indent_style = space

[*.{htm,html,ejs,jade,pug}]
indent_size = 2

[*.{scss,sass,css,styl}]
indent_size = 2

[*.{js,jsx,coffee}]
indent_size = 2

[*.{json,xml,yml}]
indent_size = 2

[*.md]
indent_size = 4

[*.java]
indent_size = 4
